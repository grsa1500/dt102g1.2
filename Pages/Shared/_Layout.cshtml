 <!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Jazzy | @ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link href="https://fonts.googleapis.com/css?family=Work+Sans&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <div class="inner-container">
            <img src="~/images/logo.png" />

            <p class="right">Dagens datum är: @DateTime.Now.ToString("yyyy-MM-dd")</p>
        </div>
    </header>
    <div class="main-body">
        <div class="inner-container">
            <!--Menyknapp till mobil-->
            <div class="menu-btn" id="menu-btn">Meny</div>

            <div class="grid">
                <div class="nav" id="nav">
                    <ul>
                        <li>
                            <a href="/Index">Start</a>
                        </li>
                        <li>
                            <a href="/Razor">Razor</a>
                        </li>
                        <li>
                            <a href="/About">Om sidan</a>
                        </li>
                    </ul>

                </div>
                <!--Sidornas innehåll-->
                <div class="main">
                    @RenderBody()
                </div>

            </div>



        </div>
    </div>

    <footer>
        <img src="~/images/border.png" />
        Av Greta Samuelsson - Kontakta mig visa e-post: grsa1500@student.miun.se
    </footer>

    <script src="~/js/main.js"></script>
</body>
</html>
